{
    "version": 2,
    "builds": [
      {
        "src": "api/index.py",
        "use": "@vercel/python",
        "config": { "maxDuration": 60 }
      },
      {
        "src": "static/**",
        "use": "@vercel/static"
      }
    ],
    "functions": {
      "api/index.py": {
        "includeFiles": ["requirements.txt"]
      }
    }
  }